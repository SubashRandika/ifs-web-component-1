{
  "name": "web-component-widget",
  "private": false,
  "version": "1.0.2",
  "type": "module",
  "description": "A reusable Lit web component",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
